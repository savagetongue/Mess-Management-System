<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t4"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Breakfast Menu"/>

    <EditText
        android:id="@+id/editTextLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBreakfast"
        android:layout_marginTop="46dp"
        android:hint="Lunch Menu"/>

    <EditText
        android:id="@+id/editTextDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLunch"
        android:layout_marginTop="46dp"
        android:hint="Dinner Menu"/>

    <Button
        android:id="@+id/updateMenuButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/editTextDinner"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#2929CA"

        android:text="Update Menu" />


</RelativeLayout>
