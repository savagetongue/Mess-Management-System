<?xml version="1.0" encoding="UTF-8" ?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager_Home_Screen"
    android:background="@drawable/t4"
    android:id="@+id/drawer"
    tools:openDrawer="">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Manager_Home_Screen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/relativeLayout3">

            <!-- custom_menu_item.xml -->


            <include
                layout="@layout/toolbar"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="425dp"
                android:layout_height="325dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"

                android:layout_x="-16dp"
                android:layout_y="2dp"
                android:src="@mipmap/homescreen_foreground"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="295dp"
                android:layout_height="195dp"
                android:layout_marginTop="355dp"
                android:layout_marginRight="95dp"
                android:layout_x="6dp"
                android:layout_y="293dp"
                android:src="@drawable/tm8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="402dp"
                android:layout_x="302dp"
                android:layout_y="335dp"
                android:src="@drawable/tm4"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/breakfastItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="32dp"
                android:layout_x="154dp"

                android:layout_y="464dp"
                android:text="Item 1 for Breakfast"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/breakfastIcon"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/dinnerIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_x="34dp"
                android:layout_y="554dp"
                android:contentDescription="Dinner Icon"
                android:src="@drawable/dinner"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="631dp"

                app:layout_constraintTop_toBottomOf="@+id/lunchItemName"
                />

            <ImageView
                android:id="@+id/lunchIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_x="34dp"
                android:layout_y="574dp"
                android:contentDescription="Lunch Icon"
                android:src="@drawable/lunch"
                app:layout_constraintTop_toBottomOf="@+id/breakfastItemName"
                tools:layout_editor_absoluteX="38dp" />

            <TextView
                android:id="@+id/dinnerItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="28dp"
                android:layout_y="719dp"
                android:text="Dinner"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="782dp"
                app:layout_constraintTop_toBottomOf="@+id/dinnerIcon"/>

            <ImageView
                android:id="@+id/breakfastIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_x="35dp"
                android:layout_y="443dp"
                android:contentDescription="Breakfast Icon"
                android:src="@drawable/breakfast"

                tools:layout_editor_absoluteX="33dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"

                tools:layout_editor_absoluteY="522dp" />

            <TextView
                android:id="@+id/dinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="64dp"
                android:layout_x="155dp"

                android:layout_y="681dp"
                android:text="Item 1 for Dinner"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/dinnerIcon"
                app:layout_constraintTop_toBottomOf="@+id/lunchItem" />

            <TextView
                android:id="@+id/lunchItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="64dp"
                android:layout_x="155dp"

                android:layout_y="570dp"
                android:text="Item 1 for Lunch"

                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/lunchIcon"
                app:layout_constraintTop_toBottomOf="@+id/breakfastItem" />

            <TextView
                android:id="@+id/lunchItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="38dp"
                android:layout_y="623dp"
                android:text="Lunch"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="702dp"
                app:layout_constraintTop_toBottomOf="@+id/lunchIcon"
                />

            <TextView
                android:id="@+id/breakfastItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="517dp"
                android:text="Breakfast"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
       app:layout_constraintTop_toBottomOf="@+id/breakfastIcon"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="585dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/top_app_bar2"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>
