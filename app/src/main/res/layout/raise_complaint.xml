<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/t4"
    tools:context=".Raise_complaint">

    <EditText
        android:id="@+id/editTextComplaint"
        android:layout_width="387dp"
        android:layout_height="191dp"
        android:hint="Enter your complaint"
        android:inputType="textMultiLine"
        android:minLines="5" />

    <!-- ImageView to display the attached image -->

    <Button
        android:id="@+id/btnAttachImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:backgroundTint="#2929CA"
        android:text="Attach IMG" />

    <ImageView
        android:id="@+id/imageViewAttached"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSubmitComplaint"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#2929CA"
        android:layout_gravity="center"
        android:text="Submit Complaint" />



</LinearLayout>
